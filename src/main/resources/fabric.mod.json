{
	"schemaVersion": 1,
	"id": "wayacreates-engine",
	"version": "${version}",
	"name": "WayaCreates Engine",
	"description": "Professional Minecraft animation and video editing engine with 3D viewport, compositing, and advanced rendering capabilities",
	"authors": [
		"WayaCreatesYT"
	],
	"contact": {
		"homepage": "https://github.com/WayaSteurbautYT/WayaCreatesEngine",
		"sources": "https://github.com/WayaSteurbautYT/WayaCreatesEngine",
		"issues": "https://github.com/WayaSteurbautYT/WayaCreatesEngine/issues",
		"discord": "https://discord.gg/wayacreates"
	},
	"license": "MIT",
	"icon": "assets/wayacreates-engine/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"com.wayacreates.WayaCreatesEngine"
		],
		"client": [
			"com.wayacreates.client.WayaCreatesEngineClient"
		],
		"modmenu": [
			"com.wayacreates.config.ModMenuIntegration"
		]
	},
	"mixins": [
		"wayacreates-engine.mixins.json",
		"wayacreates-engine.client.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"fabric-api": ">=0.87.0",
		"minecraft": "~1.20.1",
		"java": ">=17"
	},
	"recommends": {
		"sodium": ">=0.5.3",
		"iris": ">=1.6.11",
		"entity-texture-features": ">=4.5.2",
		"fresh-animations": ">=1.0.0",
		"modmenu": ">=7.2.2"
	},
	"suggests": {
		"continuity": ">=3.0.0",
		"entityculling": ">=1.6.0",
		"no-fog": ">=0.8.0"
	},
	"accessWidener": "wayacreates-engine.accesswidener",
	"custom": {
		"wayacreates": {
			"engine_version": "2.0.0",
			"video_engine": "javacv",
			"render_engine": "opengl",
			"shader_support": true,
			"plugin_api": true,
			"tutorial_system": true,
			"beginner_friendly": true
		}
	}
}
